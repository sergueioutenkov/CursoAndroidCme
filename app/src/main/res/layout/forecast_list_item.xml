<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_container"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/forecast_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        tools:src="@drawable/ic_cloudy" />

    <TextView
        android:id="@+id/forecast_location"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/forecast_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Santa Cruz De los andes del monte" />

    <TextView
        android:id="@+id/forecast_description"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/forecast_location"
        android:layout_below="@+id/forecast_location"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Parcialmente Nublado con leve descenso de la temperatura" />

    <TextView
        android:id="@+id/forecast_temperature"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="30sp"
        tools:text="27Â°C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightGrey" />

</RelativeLayout>